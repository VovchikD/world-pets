<div class="flex items-center justify-center mt-20">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <div class="mx-auto mb-4">
      <img class="mx-auto h-10 w-auto mb-4" src="https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=600" alt="Your Company">
      <h2 class="text-center text-3xl font-bold text-green">Profile</h2>
    </div>

    <div class="mt-4 sm:w-full sm:max-w-sm">
      <p class="block text-sm font-medium leading-6 text-gray-900">Username</p>
      <p class="w-full py-2 px-3 border rounded-md focus:ring focus:ring-green-300"><%= @user.username %></p>
    </div>

    <div class="mt-4 sm:w-full sm:max-w-sm">
      <p class="block text-sm font-medium leading-6 text-gray-900">Surname</p>
      <p class="w-full py-2 px-3 border rounded-md focus:ring focus:ring-green-300"><%= @user.surname %></p>
    </div>

    <div class="mt-4 sm:w-full sm:max-w-sm">
      <p class="block text-sm font-medium leading-6 text-gray-900">Location</p>
      <p class="w-full py-2 px-3 border rounded-md focus:ring focus:ring-green-300"><%= @user.location %></p>
    </div>

    <div class="mt-4 sm:w-full sm:max-w-sm">
      <p class="block text-sm font-medium leading-6 text-gray-900">Phone Number</p>
      <p class="w-full py-2 px-3 border rounded-md focus:ring focus:ring-green-300"><%= @user.phone_number %></p>
    </div>

    <div class="mt-4 sm:w-full sm:max-w-sm">
      <p class="block text-sm font-medium leading-6 text-gray-900">Email</p>
      <p class="w-full py-2 px-3 border rounded-md focus:ring focus:ring-green-300"><%= @user.email %></p>
    </div>

    <div class="mt-6 sm:w-full sm:max-w-sm">
      <%= link_to 'Edit Profile', edit_user_registration_path(@user), class: "flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm leading-6 text-white shadow-sm hover:bg-indigo-500" %>
    </div>
  </div>
</div>
